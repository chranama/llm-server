{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ticket_v1",
  "title": "Support Ticket Extraction v1",
  "description": "Extract structured fields from a customer support ticket.",
  "type": "object",
  "additionalProperties": false,
  "required": ["category", "priority", "summary", "customer_sentiment", "action_items"],
  "properties": {
    "category": {
      "type": "string",
      "enum": ["billing", "technical", "account", "feature_request", "bug_report", "other"]
    },
    "priority": { "type": "string", "enum": ["low", "medium", "high", "urgent"] },
    "summary": { "type": "string", "minLength": 1, "maxLength": 500 },
    "customer_sentiment": { "type": "string", "enum": ["negative", "neutral", "positive"] },
    "action_items": {
      "type": "array",
      "maxItems": 10,
      "items": { "type": "string", "minLength": 1, "maxLength": 200 }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
{
  "$defs": {
    "Appointment": {
      "properties": {
        "date": {
          "format": "date",
          "required": true,
          "type": "string"
        },
        "doctor": {
          "$ref": "#/$defs/Doctor",
          "required": true
        },
        "id": {
          "format": "uuid",
          "required": true,
          "type": "string"
        },
        "notes": {
          "maxLength": 255,
          "minLength": 0,
          "type": "string"
        },
        "patient": {
          "$ref": "#/$defs/Patient",
          "required": true
        },
        "reason": {
          "maxLength": 255,
          "minLength": 1,
          "required": true,
          "type": "string"
        },
        "status": {
          "default": "SCHEDULED",
          "enum": [
            "SCHEDULED",
            "CONFIRMED",
            "CANCELLED"
          ],
          "type": "string"
        },
        "time": {
          "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$",
          "required": true,
          "type": "string"
        }
      },
      "required": [
        "id",
        "patient",
        "doctor",
        "date",
        "time",
        "reason",
        "status"
      ],
      "type": "object"
    },
    "Doctor": {
      "properties": {
        "id": {
          "format": "uuid",
          "required": true,
          "type": "string"
        },
        "name": {
          "maxLength": 255,
          "minLength": 1,
          "required": true,
          "type": "string"
        },
        "speciality": {
          "maxLength": 255,
          "minLength": 1,
          "required": true,
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "speciality"
      ],
      "type": "object"
    },
    "Patient": {
      "properties": {
        "address": {
          "maxLength": 255,
          "minLength": 1,
          "required": true,
          "type": "string"
        },
        "email": {
          "format": "email",
          "required": true,
          "type": "string"
        },
        "id": {
          "format": "uuid",
          "required": true,
          "type": "string"
        },
        "name": {
          "maxLength": 255,
          "minLength": 1,
          "required": true,
          "type": "string"
        },
        "phone": {
          "pattern": "^\\d{3}-\\d{3}-\\d{4}$",
          "required": true,
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "phone",
        "address"
      ],
      "type": "object"
    }
  },
  "$id": "https://example.com/medical-appointment.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A JSON Schema for representing a medical appointment.",
  "properties": {
    "appointment": {
      "$ref": "#/$defs/Appointment"
    }
  },
  "title": "Medical Appointment",
  "type": "object"
}

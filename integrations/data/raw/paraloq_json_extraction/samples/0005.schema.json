{
  "$defs": {
    "Doctor": {
      "properties": {
        "firstName": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "lastName": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "qualifications": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "registrationNumber": {
          "pattern": "^[0-9]{6}$",
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "qualifications",
        "registrationNumber"
      ],
      "type": "object"
    },
    "Medication": {
      "properties": {
        "dosage": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "duration": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "frequency": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "name": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "units": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "name",
        "dosage",
        "units",
        "frequency",
        "duration"
      ],
      "type": "object"
    },
    "Patient": {
      "properties": {
        "dateOfBirth": {
          "format": "date",
          "type": "string"
        },
        "firstName": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "gender": {
          "enum": [
            "male",
            "female",
            "other",
            "unknown"
          ],
          "type": "string"
        },
        "lastName": {
          "maxLength": 50,
          "minLength": 1,
          "type": "string"
        },
        "medicareNumber": {
          "pattern": "^[0-9]{10}$",
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "dateOfBirth",
        "medicareNumber"
      ],
      "type": "object"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "date": {
      "format": "date",
      "type": "string"
    },
    "doctor": {
      "$ref": "#/$defs/Doctor"
    },
    "medication": {
      "$ref": "#/$defs/Medication"
    },
    "notes": {
      "maxLength": 2000,
      "minLength": 0,
      "type": "string"
    },
    "patient": {
      "$ref": "#/$defs/Patient"
    }
  },
  "required": [
    "patient",
    "doctor",
    "medication",
    "date"
  ],
  "type": "object"
}
